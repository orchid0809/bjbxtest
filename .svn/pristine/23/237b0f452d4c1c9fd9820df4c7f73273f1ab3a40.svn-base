body{ background: #ffffff;}

/* select 条件选择区块 */
.select{ padding-top: 20px; background: #ffffff;}
.you-select{ padding-left: 38px; padding-bottom: 15px; color: #777777;}
.you-select a{ padding-left: 10px; padding-right: 10px; color: #777777;}
.select-area{ min-height: 40px; height: auto; _height: 40px; border: 1px solid #dfdfdf;}
.select-list{min-height: 28px; height: auto; _height: 28px; margin-top: -1px; padding-top: 6px; padding-bottom: 6px; border-top: 1px dashed #dfdfdf;}
.select-list em,.select-list ul,.select-list li,.select-list li i{display:inline-block; *display:inline; *zoom:1; vertical-align: top; letter-spacing: normal;}
.select-list em{ width: 90px; margin-right: 40px; height: 26px; line-height: 26px; text-align: right; color: #777777;}
.select-list li{ padding-left: 12px; padding-right: 16px; margin-right: 15px; height: 26px; line-height: 26px;}
.select-list .on{ border: 1px solid #d43225; background: url(../images/list-icon6.png) 100% 100% no-repeat;}
.select-list .list1 .icon1{width: 27px; height: 26px; background: url(../images/list-icon1.png) 0 50% no-repeat;}
.select-list .list1 .icon2{width: 27px; height: 26px; background: url(../images/list-icon2.png) 0 50% no-repeat;}
.select-list .list1 .icon3{width: 27px; height: 26px; background: url(../images/list-icon3.png) 0 50% no-repeat;}
.select-list .list1 .icon4{width: 27px; height: 26px; background: url(../images/list-icon4.png) 0 50% no-repeat;}

/*  sorting 排序 */
.sorting-bg{ padding-top: 24px; background: #ffffff;}
.sorting-area{ padding: 8px 20px; height: 26px; border: 1px solid #dfdfdf; color: #666;}
.sorting-area .num{ float: right; line-height: 26px;}
.sorting-area .num i{ padding-left: 5px; padding-right: 5px; color: #d43225;}
.sorting{letter-spacing:-0.34em;}
.sorting em,.sorting ul,.sorting li,.sorting i,.sorting span,.sorting b,.sorting input,.sorting s{display:inline-block; *display:inline; *zoom:1; vertical-align: middle; letter-spacing: normal;}
.sorting em{ padding-right: 30px; height: 26px; line-height: 26px;}
.sorting .sorting-list{ margin-right: 20px; letter-spacing:-0.34em;}
.sorting-list li{ margin-left: 10px; padding-left: 10px; padding-right: 10px; min-width: 40px; height: 26px; line-height: 26px; background: #dddddd; text-align: center; cursor: pointer;}
.sorting-list li i{ margin-left: 8px; width: 7px; height: 26px; background: url(../images/list-arrow_16.png) 0 50% no-repeat;  }
.sorting-list li:hover,.sorting-list .on{ background: #d43225; color: #ffffff;}
.sorting-list li:hover i,.sorting-list .on i{background: url(../images/list-arrow_19.png) 0 50% no-repeat;  }
.price-filter{ width: 50px; height: 24px; margin-left: 6px; margin-right: 6px; padding-left: 6px; padding-right: 3px; border: 1px solid #aaaaaa;}
.price-filter b{ line-height: 24px; font-family:Arial, sans-serif;}
.price-filter input{ border: none; background: none; margin-left: 5px; width: 36px; height: 24px; line-height: 24px; text-align: center;}
.sorting .btn{ width: 50px; height: 24px;line-height: 24px; text-align: center; margin-left: 5px; border: 1px solid #e1e1e1; background: #f8f8f8; cursor: pointer; color: #666; font-size: 12px; }

