/* wares list 商品列表 */
.wares-area{ padding-top: 24px; background: #ffffff;}
.wares-list{ margin-left: -19px; overflow: hidden; letter-spacing:-0.34em;}
.wares-list li,.wares-list .pic,.wares-list .pic i{display:inline-block; *display:inline; *zoom:1; vertical-align: middle; letter-spacing: normal;}
.wares-list .pic i{height: 100%;}
.wares-list li{ width: 285px; margin-left: 19px; margin-bottom: 20px; -webkit-transition: border-color .1s ease; -moz-transition: border-color .1s ease; transition: border-color .1s ease;}
.wares-list .content:hover{ border: 1px solid #e9e9e9; -webkit-box-shadow: 0 0 2px 2px #f1f1f1; -moz-box-shadow: 0 0 2px 2px #f1f1f1; box-shadow: 0 0 2px 2px #f1f1f1;}
.wares-list .pic { position: relative; width: 285px; height: 295px; border: 1px solid #dfdfdf; text-align: center; overflow: hidden; }
.wares-list .pic img { max-width: 285px; max-height: 295px; vertical-align: middle; overflow: hidden; }
* html .wares-list .pic img { width: expression(this.width > 285 && this.width > this.height ? 285:auto); height: expression(this.height > 295 ? 295:auto); }
.wares-list .content:hover .pic{ border: none;}
.wares-list li em{ display: block; padding: 12px 8px 8px 8px; color: #e4393c; font-family:Arial, sans-serif; font-size: 20px;}
.wares-list li em i{ font-size: 14px; padding-right: 5px;}
.wares-list li h1{ margin-bottom: 8px; padding: 0 8px 0 8px; height: 40px; line-height: 20px; overflow: hidden; word-break: break-all; word-wrap: break-word; color: #666666;}
.wares-list li h1 a{color: #666666;}
.wares-list li span{ display: block; padding: 0 8px 8px 8px; color: #a7a7a7; font-size: 12px;}
.wares-list li span i{color: #005aa0; font-family: verdana;}

.wares-list .new-wares,.wares-list .snap-up{ position: absolute; bottom: 0; left: 0; right: 0; margin:auto; width:100%;}
.wares-list .new-wares h6,.wares-list .snap-up h6{ position: relative; z-index: 3; color: #ffffff; height: 24px; line-height: 24px;}
.wares-list .new-wares s,.wares-list .snap-up s{position: absolute; z-index: 1; bottom: 0; left: 0; right: 0; margin:auto; width:100%; height: 24px; -webkit-opacity: 0.7; -khtml-opacity: .7; -moz-opacity: .7; opacity: .7; filter: alpha(opacity=70);}
.wares-list .new-wares s{ background: #20af0d;}
.wares-list .snap-up s{ background: #f33939;}

/* 分页样式 */
.page-area { margin: 30px 0 30px 90px; height: 32px; overflow: hidden; clear: both; letter-spacing: -0.34em; text-align: center; }
.page-area a, .page-area span, .page-area i, .page-area input { display: inline-block; *display: inline; zoom: 1; vertical-align: top; letter-spacing: normal; text-align: center; }
.page-area .prev, .page-area .next { width: 66px; height: 26px; line-height: 26px; border: 1px solid #d5d5d5; margin-left: 10px; }
.page-area .page-number a { margin-left: 10px; width: 28px; height: 26px; line-height: 26px; border: 1px solid #d5d5d5; }
.page-area .page-number i { margin-left: 10px; }
.page-area .page-number a.on { background: #e4393c; color: #ffffff; border: 1px solid #e4393c; }
.page-area .textbox { margin-left: 8px; margin-right: 8px; padding-left: 10px; padding-right: 10px; width: 20px; height: 26px; line-height: 26px; border: 1px solid #c9c9c9; }
.page-area .button { margin-left: 10px; width: 50px; height: 28px; line-height: 28px; background: #e4393c; color: #ffffff; border: 1px solid #e4393c; font-size: 14px; font-family: "Microsoft YaHei"; cursor: pointer; }
.page-area .tj { padding-left: 10px; padding-right: 10px; height: 26px; line-height: 26px; }
.page-area .button-area { padding-left: 10px; padding-right: 10px; height: 26px; line-height: 26px; }